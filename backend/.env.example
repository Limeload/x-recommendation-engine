.env.example

# API Configuration
API_TITLE="X Recommendation Engine API"
API_VERSION="1.0.0"
DEBUG=true

# Vector Database Configuration
USE_VECTOR_DB=false
VECTOR_DB_TYPE="pinecone"

# Pinecone (if using Pinecone)
# PINECONE_API_KEY="your-pinecone-api-key"
# PINECONE_INDEX_NAME="tweets"

# Weaviate (if using Weaviate)
# WEAVIATE_URL="http://localhost:8080"

# LLM Configuration
LLM_PROVIDER="openai"
# OPENAI_API_KEY="your-openai-api-key"
# ANTHROPIC_API_KEY="your-anthropic-api-key"
LLM_MODEL="gpt-3.5-turbo"

# Ranking Configuration
RECENCY_DECAY_HOURS=24.0
MAX_LIKES_NORMALIZATION=10000
MAX_RETWEETS_NORMALIZATION=2000
MAX_REPLIES_NORMALIZATION=500
MAX_BOOKMARKS_NORMALIZATION=1000

# Diversity Filtering
MAX_TWEETS_PER_AUTHOR=3
MAX_TWEETS_PER_TOPIC=5

# CORS
CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000"]'
